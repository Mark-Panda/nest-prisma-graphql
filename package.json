{
    "name": "nest-prisma-graphql",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prisma:g": "node node_modules/prisma/build/index.js generate",
        "format": "npx prettier ./@generated --write",
        "regen": "rm -rf @generated && npm run prisma:g && npm run format",
        "dev": "ts-node-dev src/main.ts"
    },
    "dependencies": {
        "@nestjs/common": "^8.4.0",
        "@nestjs/core": "^8.4.0",
        "@nestjs/platform-express": "^8.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.4"
    },
    "devDependencies": {
        "@nestjs/apollo": "^10.0.6",
        "@nestjs/cli": "^8.0.0",
        "@nestjs/graphql": "^10.0.6",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@paljs/plugins": "^4.0.16",
        "@prisma/client": "^3.10.0",
        "@types/express": "^4.17.13",
        "@types/jest": "27.0.2",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "apollo-server-express": "^3.6.3",
        "apollo-server-plugin-base": "^3.5.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "graphql": "^16.3.0",
        "graphql-query-complexity": "^0.11.0",
        "graphql-scalars": "^1.15.0",
        "graphql-type-json": "^0.3.2",
        "jest": "^27.2.5",
        "prettier": "^2.5.1",
        "prisma": "^3.10.0",
        "prisma-graphql-type-decimal": "^2.0.0",
        "prisma-nestjs-graphql": "^14.6.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.6.0",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.6.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
