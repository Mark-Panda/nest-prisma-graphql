{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            { "include": "../config/*.yaml", "outDir": "./dist/config" },
            { "include": "../public/**/*", "outDir": "./dist/public" },
            { "include": "../views/*", "outDir": "./dist/views" },
            { "include": "../prisma/**/*", "outDir": "./dist/prisma" }
        ]
    }
}